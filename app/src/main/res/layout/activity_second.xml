<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbackground">
<FrameLayout
    android:id="@+id/KnowledgeHub"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:backgroundTint="#82B1FF"
        android:textAlignment="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="18dp"
            android:text="@string/AndroidHead"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:backgroundTint="#80D8FF"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="18dp"
            android:textSize="25sp"
            android:text="@string/WebHead"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:backgroundTint="#7DF0F0"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="18dp"
            android:text="@string/AIHead"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:backgroundTint="#A7FFEB"
        app:cardUseCompatPadding="true"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="18dp"
            android:text="@string/ml_head"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:backgroundTint="#7FBAB4"
            app:cardUseCompatPadding="true"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:padding="18dp"
                android:text="Python Programming"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:backgroundTint="#A4D2E7"
            app:cardUseCompatPadding="true"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:padding="18dp"
                android:text="SQLite Database"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:backgroundTint="#B5BEEF"
            app:cardUseCompatPadding="true"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25sp"
                android:padding="18dp"
                android:text="OOPS Concepts"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</FrameLayout>

</LinearLayout>